{
  "name": "api-arv",
  "version": "1.0.0",
  "description": "Api que contém toda a lógica para a aplicação de agendamento e vendas.",
  "author": "joaoduarte147@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run prebuild && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --runInBand --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/jest-integration.json --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "docker:build": "docker build --rm -f \"Dockerfile\" -t joaoduarte10/api-arv:latest \".\"",
    "docker:run": "docker run -d --name api-arv-controll --restart unless-stopped --env-file .env -p 5000:5000 joaoduarte10/api-arv:latest"
  },
  "dependencies": {
    "@nestjs/common": "9.0.0",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.0",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.0.0",
    "@nestjs/swagger": "6.1.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "16.0.3",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "pg": "8.8.0",
    "rimraf": "4.3.1",
    "swagger-stats": "0.99.5",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.0",
    "@nestjs/testing": "9.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.8",
    "@types/node": "16.0.0",
    "@types/passport-jwt": "3.0.7",
    "@types/passport-local": "1.0.34",
    "@types/pg": "8.6.5",
    "@types/supertest": "2.0.11",
    "@types/swagger-stats": "0.95.8",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "prettier": "2.3.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.7.4"
  }
}
